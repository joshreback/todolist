<button type="button" class='complete-todo btn-success btn-xs'>
  <i class="glyphicon glyphicon-ok"></i>
</button>
<input type='text' class='todo' value='{{name}}' disabled></input>
<button type='button' class='edit-todo complete-todo btn-warning btn-xs'>
  <i class="glyphicon glyphicon-pencil"></i>
</button>
<button type='button' class='destroy-todo complete-todo btn-danger btn-xs'>
  <i class="glyphicon glyphicon-remove"></i>
</button>
